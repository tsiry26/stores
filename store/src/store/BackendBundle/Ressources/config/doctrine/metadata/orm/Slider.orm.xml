<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Slider" table="slider">
    <indexes>
      <index name="product_id" columns="product_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="caption" type="text" column="caption" nullable="true"/>
    <field name="image" type="string" column="image" length="300" nullable="true"/>
    <field name="position" type="integer" column="position" nullable="true"/>
    <field name="active" type="boolean" column="active" nullable="true"/>
    <many-to-one field="product" target-entity="Product">
      <join-columns>
        <join-column name="product_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
