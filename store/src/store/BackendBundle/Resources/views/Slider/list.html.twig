{% extends "storeBackendBundle::layout.html.twig" %}
{% block titlepage %}
    <i class="fa fa-bookmark"></i> Slider
{% endblock %}
{% block content %}
    <div class="row">
        <a href="{{ path('store_backend_slider_new') }}" class="pull-right btn btn-primary btn-lg btn-rounded">Ajouter une slider</a>
    </div>
    <div class="panel">
        <div class="panel-body">
            <table class="table table-bordered">
                <thead>
                <th>Caption</th>
                <th>Image</th>
                <th>Position</th>
                <th>Active</th>
                </thead>
                <tbody>
                {% for slider in sliders %}
                    <tr>

                        <td>{{ slider.caption }}</td>
                        <td>{{ slider.image }}</td>
                        <td>{{ slider.position }}</td>
                        <td>
                            {% if slider.active == 0 %}
                                <a href=""><i class="fa fa-times"></i></a>
                            {% else %}
                                <a href=""><i class="fa fa-check"></i></a>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><i class="fa fa-share-alt"></i> Details</button>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('store_backend_slider_edit', {'id': slider.id }) }}"><i class="fa fa-pencil"></i> Editer</a></li>
                                    <li><a href=""><i class="fa fa-times"></i> Supprimer</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}