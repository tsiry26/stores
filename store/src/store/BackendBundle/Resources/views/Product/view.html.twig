{% extends "storeBackendBundle::layout.html.twig" %}
{% block titlepage %}
{% endblock %}
{% block content %}
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Title</th>
                <th>Déscription</th>
                <th>Quantity</th>
                <th>Catégory</th>
                <th>Tags</th>
            </tr>

        </thead>
        <tbody>
            <tr>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.quantity }}</td>
                <td>
                    <ul>
                        {% for category in product.category %}
                        <li>{{ category.title }}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>
                    <ul>
                        {% for tag in product.tag %}
                            <li>{{ tag.word }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}