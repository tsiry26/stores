{% extends "storeBackendBundle::layout.html.twig" %}
{% block titlepage %}
{% endblock %}
{% block content %}
    <table class="table table-bordered">
        <thead>
        <th>Title</th>
        <th>Description</th>
        <th>Prouduits</th>
        <th>Position</th>
        </thead>
        <tbody>
        <td>{{ categorie.title }}</td>
        <td>{{ categorie.description }}</td>
        <td>
            <ul>
                {% for produit in categorie.product %}
                    <li>{{ produit.title }}</li>
                {% endfor %}
            </ul>
        </td>
        <td>{{ categorie.position }}</td>
        </tbody>
    </table>
{% endblock %}
